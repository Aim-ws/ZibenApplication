<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:animateLayoutChanges="true"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/id_container"
	android:orientation="vertical">



	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#f0f0f0"
		android:paddingLeft="@dimen/common_margin_15"
		android:paddingRight="@dimen/common_margin_15"
		android:paddingBottom="@dimen/common_margin_8"
		android:paddingTop="@dimen/common_margin_8"
		android:layout_marginLeft="@dimen/common_margin_20"
		android:layout_marginRight="@dimen/common_margin_20"
		android:layout_marginTop="@dimen/common_margin_5">


		<TextView
			android:id="@+id/id_ranking_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:textSize="@dimen/common_text_size_16"
		    android:layout_centerVertical="true"
		    android:textColor="#717171"

			/>

		<com.ziben365.ocapp.widget.CircleImageView
			android:id="@+id/id_avatar"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/id_ranking_num"
			android:layout_marginLeft="@dimen/common_margin_12"
			android:scaleType="centerCrop"/>

		<TextView
			android:id="@+id/id_gold_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:drawableTop="@mipmap/icon_channel_twitter_gold"
			android:gravity="center"
			android:textSize="@dimen/common_text_size_12"
			android:layout_alignParentRight="true"
			android:textColor="#717171"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@id/id_gold_num"
			android:layout_marginRight="@dimen/common_margin_10"
			android:layout_marginLeft="@dimen/common_margin_10"
			android:layout_toRightOf="@id/id_avatar">

			<TextView
				android:id="@+id/id_user_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#323232"
				android:textSize="@dimen/common_text_size_16"
				android:singleLine="true"
				android:ellipsize="end"
				/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/common_margin_5"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/id_user_city"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/common_text_size_12"
					android:drawableLeft="@mipmap/ic_p_twitter_address"
					android:drawablePadding="@dimen/common_margin_5"
					android:layout_gravity="center_vertical"
					android:textColor="#707070"
					android:singleLine="true"
					android:ellipsize="end"
					/>

				<ImageView
					android:id="@+id/id_user_gender"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="@dimen/common_margin_8"
					android:scaleType="centerCrop"
					/>





			</LinearLayout>


		</LinearLayout>
	</RelativeLayout>

</LinearLayout>