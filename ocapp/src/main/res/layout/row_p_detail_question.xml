<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	android:padding="@dimen/common_margin_12"
	android:orientation="vertical"
	android:elevation="@dimen/common_margin_7">

	<TextView
		android:id="@+id/id_p_q_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:textColor="@color/colorAppbar"
	    android:textSize="@dimen/common_text_size_14"
	    android:text="@string/app_name"
	    android:drawableLeft="@mipmap/icon_p_q_1"
	    android:gravity="center"
	    android:drawablePadding="@dimen/common_margin_5"
		/>

	<TextView
		android:id="@+id/id_p_q_answer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/common_margin_8"
		android:textSize="@dimen/common_text_size_14"
		android:lineSpacingExtra="1.1dp"
		android:lineSpacingMultiplier="1.1"
		android:textColor="#323232"
		android:text="@string/app_name"/>

</LinearLayout>