<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	android:animateLayoutChanges="true"
	android:id="@+id/id_root_view"
	android:orientation="vertical">

	<TextView
		android:id="@+id/id_ranking"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/common_margin_15"
		android:layout_marginTop="@dimen/common_margin_10"
		android:textColor="#afafaf"
		android:textSize="@dimen/common_text_size_15"/>

	<TextView
		android:id="@+id/id_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/id_ranking"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/common_margin_10"
		android:layout_marginTop="@dimen/common_margin_10"
		android:textColor="#afafaf"
		android:textSize="@dimen/common_text_size_15"/>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/id_ranking"
		android:layout_marginBottom="@dimen/common_margin_10"
		android:layout_marginLeft="@dimen/common_margin_10"
		android:layout_marginRight="@dimen/common_margin_10"
		android:layout_marginTop="@dimen/common_margin_12"
		android:orientation="vertical"
		app:cardBackgroundColor="@android:color/white"
		app:cardCornerRadius="7dp"
		app:cardElevation="5dp"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/id_imageView"
				android:layout_width="match_parent"
				android:layout_height="184dp"
				android:scaleType="centerCrop"/>

			<TextView
				android:id="@+id/id_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="@dimen/common_margin_20"
				android:layout_marginRight="@dimen/common_margin_20"
				android:layout_marginTop="@dimen/common_margin_12"
				android:textColor="#323232"
				android:textSize="@dimen/common_text_size_18"/>


			<TextView
				android:id="@+id/id_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="@dimen/common_margin_20"
				android:layout_marginRight="@dimen/common_margin_20"
				android:layout_marginTop="@dimen/common_margin_8"
				android:textColor="#898989"
				android:textSize="@dimen/common_text_size_12"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/common_margin_20"
				android:layout_marginLeft="@dimen/common_margin_20"
				android:layout_marginRight="@dimen/common_margin_20"
				android:layout_marginTop="@dimen/common_margin_10">

				<com.ziben365.ocapp.widget.CircleImageView
					android:id="@+id/id_logo"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:scaleType="centerCrop"
					app:riv_corner_radius="@dimen/common_margin_5"
					/>

				<TextView
					android:id="@+id/id_recommend_person"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@id/id_logo"
					android:layout_marginBottom="@dimen/common_margin_20"
					android:layout_marginLeft="@dimen/common_margin_24"
					android:layout_toRightOf="@id/id_logo"
					android:textColor="#c49b5c"
					android:textSize="@dimen/common_text_size_12"
					android:textStyle="bold"
					/>

				<TextView
					android:id="@+id/id_recommend_reason"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@id/id_logo"
					android:layout_marginTop="@dimen/common_margin_10"
					android:textColor="#c49b5c"
					android:textSize="@dimen/common_text_size_12"
				    android:lineSpacingExtra="1.1dp"
				    android:lineSpacingMultiplier="1.1"
					/>

			</RelativeLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>


</RelativeLayout>