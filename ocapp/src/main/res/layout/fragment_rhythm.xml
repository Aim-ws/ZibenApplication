<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/relayout"
	android:orientation="vertical"
	android:background="@color/colorAppbar">


	<com.ziben365.ocapp.refresh.extra.PullToRefreshViewPager
		android:id="@+id/pull_to_refresh_viewpager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:ptrAnimationStyle="rotate_and_anim"
		app:ptrDrawable="@mipmap/loading_1"
		app:ptrMode="both"
		app:ptrScrollingWhileRefreshingEnabled="false"
	    android:layout_marginBottom="60dp"

		/>

	<com.ziben365.ocapp.widget.rhythm.RhythmLayout
		android:id="@+id/rhythm_layout_pager"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:scrollbars="none"
		android:layout_alignParentBottom="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"/>

	</com.ziben365.ocapp.widget.rhythm.RhythmLayout>

</RelativeLayout>