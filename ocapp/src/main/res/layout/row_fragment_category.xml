<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:animateLayoutChanges="true"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">


	<LinearLayout
		android:id="@+id/id_row_category_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/common_margin_20"
		android:layout_marginLeft="@dimen/common_margin_5"
		android:layout_marginRight="@dimen/common_margin_5"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">


			<TextView
				android:id="@+id/id_row_category_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/common_margin_10"
				android:textSize="@dimen/common_text_size_16"
				android:layout_centerVertical="true"
				android:textColor="#727272"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
			    android:drawableRight="@mipmap/icon_category_more"
			    android:layout_marginRight="@dimen/common_margin_13"
			    android:drawablePadding="@dimen/common_margin_5"
			    android:padding="@dimen/common_margin_2"
			    android:gravity="center"
			    android:text="@string/more"
			    android:textColor="#727272"
			    android:textSize="@dimen/common_text_size_12"
				/>
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/common_margin_1"
		    android:background="@color/gray"
		    android:layout_marginLeft="@dimen/common_margin_10"
		    android:layout_marginRight="@dimen/common_margin_10"
			android:layout_marginTop="@dimen/common_margin_5"
			android:layout_marginBottom="@dimen/common_margin_5"/>
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/common_margin_10"
		android:layout_marginRight="@dimen/common_margin_10"
		android:paddingLeft="@dimen/common_margin_5"
		android:paddingRight="@dimen/common_margin_5"
		android:layout_marginTop="@dimen/common_margin_10"
		android:id="@+id/id_content_layout">

		<com.ziben365.ocapp.widget.RoundedImageView
			android:id="@+id/id_logo"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_centerVertical="true"
			app:riv_corner_radius="@dimen/common_margin_5"
			android:scaleType="centerCrop"
			/>


		<ImageView
			android:id="@+id/id_category_next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_category_next"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:visibility="invisible"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/id_logo"
			android:layout_toLeftOf="@id/id_category_next"
			android:layout_marginLeft="@dimen/common_margin_15"
			android:layout_marginRight="@dimen/common_margin_15">


			<TextView
				android:id="@+id/id_p_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"
				android:textSize="@dimen/common_text_size_16"
				android:textColor="#323232"
				/>

			<TextView
				android:id="@+id/id_p_description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/common_margin_4"
				android:textSize="@dimen/common_text_size_12"
				android:textColor="#818181"
				android:singleLine="true"
				android:ellipsize="end"
				/>


		</LinearLayout>





	</RelativeLayout>

	<View
		android:id="@+id/id_line"
		android:layout_width="match_parent"
		android:layout_height="@dimen/common_margin_1"
		android:background="@color/gray"
		android:layout_marginTop="@dimen/common_margin_8"
		android:layout_marginBottom="@dimen/common_margin_5"
		android:alpha="0.5"
		android:visibility="visible"/>

</LinearLayout>