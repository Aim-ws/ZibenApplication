<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/shape_tag_normal"
	android:gravity="center"
	android:id="@+id/id_container"
	android:elevation="@dimen/common_margin_7"
	android:padding="@dimen/common_margin_5">

	<TextView
		android:id="@+id/id_tag_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/color_text_33"
		android:textSize="@dimen/common_text_size_14"
		android:layout_gravity="center_vertical"
		android:text="@string/app_name"/>

	<ImageView
		android:id="@+id/id_tag_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:src="@mipmap/icon_tag_delete"
	    android:layout_marginLeft="@dimen/common_margin_2"
	    android:visibility="gone"

		/>





</LinearLayout>